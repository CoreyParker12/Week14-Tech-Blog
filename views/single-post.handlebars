
<div>
    <div class="single-post-title">
        {{title}}
    </div>
    <div class="single-post-author">
        Written By: {{user.name}}
    </div>
    <div class="single-post-content">
        {{content}}
    </div>
    <div>
        <h3 class="single-post-comments-title">Comments:</h3>
        <div>
            {{#each comments as |comment|}}
            {{> comments-display}}
            {{/each}}
        </div>
    </div>
</div>

<div class="single-post-buttons">
    <div class="single-post-buttons-spacing">
        <form class="create-comment">
            <div>
                <label for="Comment">Comment:</label>
                <input id="comment"/>
            </div>
            <div class="comment-spacing">
                <button class="no-button bold" type="submit">Add Comment</button>
            </div>
        </form>
    </div>
    <div class="single-post-flex">
        <div class="single-post-buttons-spacing single-post-buttons-LR">
            <form class="delete-post">
                <button class="no-button bold" type="submit">Delete Post</button>
            </form>
        </div>
        <div class="single-post-buttons-spacing single-post-buttons-LR">
            <form>
                <a href="/updatepost/{{id}}">Update Post</a>   
            </form>
        </div>
    </div>

</div>

<script src="/js/createComment.js"></script> 
<script src="/js/deletePost.js"></script>






